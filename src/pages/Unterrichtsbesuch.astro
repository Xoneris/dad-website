---
import Layout from "../layouts/Layout.astro";
import Paragraph from "../components/content/Paragraph.astro"

import { getCollection } from 'astro:content';

const paragraphs = await getCollection('unterrichtsbesuch');
---

<Layout>
    <section class="p-4 flex flex-col gap-4">
        <h1 class="text-3xl">Unterrichtsbesuch bei einer erfahrenen Lehrperson</h1>

        {
            paragraphs.sort((a,b) => a.data.id - b.data.id).map((paragraph) => (
                <Paragraph content={paragraph} />
            ))
        }

        <h2 class="text-xl">Anhang</h2>
        <a href="/Anhänge/Anhang 10_ Protokoll und PP Präsentation.pdf" target="_blank" class="hover:underline hover:cursor-pointer">
            Protokoll und PP Präsentation
        </a>

    </section>
</Layout>