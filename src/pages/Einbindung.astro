---
import Layout from "../layouts/Layout.astro";
import Paragraph from "../components/content/Paragraph.astro"

import { getCollection } from 'astro:content';
import { Image } from "astro:assets";

const paragraphs = await getCollection('einbindung');
---

<Layout>
    <section class="p-4 flex flex-col gap-4">
        <h1 class="text-3xl">Aktive Einbindung der Lernenden 5.3</h1>

        <Image
            src={"/images/einbindung.png"}
            width={296}
            height={295}
            alt={"einbindung"}
        ></Image>
        {
            paragraphs.sort((a,b) => a.data.id - b.data.id).map((paragraph) => (
                <Paragraph content={paragraph} />
            ))
        }

    </section>
</Layout>