---
import Layout from "../layouts/Layout.astro";
import Paragraph from "../components/content/Paragraph.astro"

import { getCollection } from 'astro:content';

const paragraphs = await getCollection('hospitalisation1');
---

<Layout>
    <section class="p-4 flex flex-col gap-4">
        <h1 class="text-3xl">Hospitalisation vom 10. Januar 2025</h1>

        {
            paragraphs.sort((a,b) => a.data.id - b.data.id).map((paragraph) => (
                <Paragraph content={paragraph} />
            ))
        }

        <h2 class="text-xl">Anhang</h2>
        <a href="/Anhänge/Anhang 6_Unterrichtsvorbereitung 10.01.2025_Zusammenfassung" target="_blank" class="hover:underline hover:cursor-pointer">
            Unterrichtsvorbereitung 10.01.2025_Zusammenfassung
        </a>
        <a href="/Anhänge/Anhang 7_WBZ LU HW Schullehrplan Fach HLK_Elektrisch.pdf" target="_blank" class="hover:underline hover:cursor-pointer">
            WBZ LU HW Schullehrplan Fach HLK_Elektrisch
        </a>
        <a href="/Anhänge/Anhang 8_Lektionenplanung Hauswarte.pdf" target="_blank" class="hover:underline hover:cursor-pointer">
            Lektionenplanung Hauswarte
        </a>
        <a href="/Anhänge/Anhang 9_Martin Mätzler_Unterrichtsbeobachtung_Hospitation 10.01.25 (1).pdf" target="_blank" class="hover:underline hover:cursor-pointer">
            Martin Mätzler_Unterrichtsbeobachtung_Hospitation 10.01.25
        </a>

    </section>
</Layout>